generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model notes {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  positionX Float
  positionY Float
  boardId   String
  createdAt DateTime? @default(now()) 
  updatedAt DateTime? @default(now())
}

model boards {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  ownerId     String
  createdAt DateTime? @default(now()) 
  updatedAt DateTime? @default(now())
}

model users {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  createdAt DateTime? @default(now()) 
  updatedAt DateTime? @default(now())
}